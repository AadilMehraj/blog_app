<%- include ('partials/header.ejs') 
%>

<div class="main-box">
    <section class="row">
        <div class="col-md-6 col-sm-12 content-header">
                <h2>Developer onboarding for new college grads</h2>
                <p>Pluralsightâ€™s Erik Gross walks through developer onboarding best practices for college grads who need to learn your...</p>
                <button class="primary-btn">Read full article</button>
        </div>
        <div class="col-md-6 col-sm-12 content-image">
            <img class="banner-img img-fluid" src="/images/banner1.png" alt="banner image"  >
        </div>
    </section>

    <!-- Blog Cards list section -->
    <section class="row blog-section">
      <% blogList.forEach( function(post, index ) { %>
        <div class="col-lg-4 col-md-6">
            <div class="card">
                <img src="/images/blog-images/<%= post.header_image %>" alt="">
                <h3 class="card-header"><%= post.blog_title %> </h3>
                <p  class="p-date"><%= post.b_date %></i></p>
                <p><%= post.blog_short_description %></p>
    
                <form action="/post/<%= post.blog_title %> " method="post">
                    <input type="text" name="index" id="" value="<%= index %>" hidden>
                      <button type="submit">Read full article</button>
                </form>
            </div>   
           </div>
      <%} )%>
        
    </section>
    <div class="text-center">
        <button class="primary-btn sm-btn">Show More</button>
     </div>
  </div>
</div>


<%- include ('partials/footer.ejs') %> 
